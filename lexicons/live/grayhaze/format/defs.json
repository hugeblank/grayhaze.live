{
    "lexicon": 1,
    "id": "live.grayhaze.format.defs",
    "defs": {
        "hlsSegments": {
            "type": "object",
            "description": "List of TS segments in an HLS playlist",
            "required": [
                "segments"
            ],
            "properties": {
                "segments": {
                    "type": "array",
                    "items": {
                        "type": "blob",
                        "accept": [ "video/MP2T" ]
                    }
                }
            }
        }
    }
}